extends layout 

block content 
  h2= title 

  form(method="post")
    div
      label(for="category-name") Name: 
      input#category-name(type="text", name="category-name", value=(category === undefined ? "" : category.name), required) 

    div 
      button(type="submit") Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg