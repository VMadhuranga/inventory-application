extends layout 

block content 
  h2= title 

  form(method="post")
    div
      label(for="manufacturer-name") Name: 
      input#manufacturer-name(type="text", name="manufacturer-name", value=(manufacturer === undefined ? "" : manufacturer.name), required) 
    
    div
      label(for="manufacturer-description") Description: 
      input#manufacturer-description(type="text", name="manufacturer-description", value=(manufacturer === undefined ? "" : manufacturer.description), required) 
    
    div 
      button(type="submit") Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg