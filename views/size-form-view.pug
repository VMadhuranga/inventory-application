extends layout 

block content 
  h2= title 

  form(method="post")
    div 
      label(for="size-type") Type: 
      input#size-type(type="text", name="size-type",value=(size === undefined ? "" : size.type) , required)

    div 
      button(type="submit") Submit 
  
  if errors
    ul
      for error in errors
        li!= error.msg
    